@model BookType

<h3 class="text-center">Kitap güncelleme sayfası</h3>
<form method="post" asp-controller="BookType" asp-action="Edit" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Kitap tipi</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>